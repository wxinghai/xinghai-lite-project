		},
		onLoad() {
			uni.setNavigationBarTitle({
				title: '我的'
			});
			
			// 实际应用中可以从服务器获取用户信息
			// this.getUserInfo();
		},
		methods: {
			navigateTo(page) {
				uni.showToast({
					title: `跳转到 ${page} 页面`,
					icon: 'none'
				});
				
				// 实际应用中可以跳转到对应页面
				// uni.navigateTo({
				//   url: `/pages/${page}/${page}`
				// });
			},
			uploadAvatar() {
				uni.chooseImage({
					count: 1,
					sizeType: ['compressed'],
					sourceType: ['album', 'camera'],
					success: (res) => {
						const tempFilePath = res.tempFilePaths[0];
						this.userInfo.avatar = tempFilePath;
						
						// 实际应用中可以上传头像到服务器
						// this.uploadAvatarToServer(tempFilePath);
						uni.showToast({
							title: '头像更新成功',
							icon: 'success'
						});
					}
				});
			},
			copyUserId() {
				uni.setClipboardData({
					data: this.userInfo.id,
					success: () => {
						uni.showToast({
							title: 'ID已复制到剪贴板',
							icon: 'success'
						});
					}
				});
			},
			editUserInfo() {
				this.navigateTo('edit-profile');
			},
			shareApp() {
				// 分享功能
				uni.share({
					provider: "weixin",
					scene: "WXSceneSession",
					type: 0,
					title: "训记App - 健身训练记录",
					summary: "专业的健身记录与训练规划应用",
					imageUrl: "/static/logo.png",
					success: (res) => {
						uni.showToast({
							title: '分享成功',
							icon: 'success'
						});
					},
					fail: (err) => {
						uni.showToast({
							title: '分享失败',
							icon: 'none'
						});
					}
				});
			},
			getUserInfo() {
				// 实际应用中可以从服务器获取用户信息
				uni.request({
					url: 'https://api.example.com/user',
					method: 'GET',
					success: (res) => {
						if (res.statusCode === 200) {
							this.userInfo = res.data;
						}
					},
					fail: () => {
						uni.showToast({
							title: '获取用户信息失败',
							icon: 'none'
						});
					}
				});
			}
		}
	}
</script>

